{
  "name": "apiato/apiato",
  "description": "A flawless framework for building scalable and testable API-Centric Apps with PHP and Laravel.",
  "homepage": "http://apiato.io/",
  "support": {
    "issues": "https://github.com/apiato/apiato/issues",
    "source": "https://github.com/apiato/apiato"
  },
  "authors": [
    {
      "name": "Mahmoud Zalt",
      "email": "mahmoud@zalt.me"
    }
  ],
  "keywords": [
    "Apiato",
    "API",
    "Framework",
    "API framework",
    "API Starter",
    "PHP API Starter",
    "Laravel API",
    "PHP",
    "Hello API",
    "Porto",
    "Porto SAP"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^7.2.5",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-tokenizer": "*",
    "doctrine/dbal": "2.5.*",
    "fideloper/proxy": "^4.2",
    "fruitcake/laravel-cors": "^1.0",
    "guzzlehttp/guzzle": "^6.3",
    "intervention/image": "^2.7",
    "laravel/framework": "^7.0",
    "laravel/tinker": "^2.0",
    "wikimedia/composer-merge-plugin": "^1.3.1"
  },
  "require-dev": {
    "facade/ignition": "^2.0",
    "fzaninotto/faker": "^1.9.1",
    "mockery/mockery": "^1.3.1",
    "nunomaduro/collision": "^4.1",
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {}
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    },
    "merge-plugin": {
      "include": [
        "app/Ship/composer.json",
        "app/Ship/core/composer.json",
        "app/Containers/*/composer.json",
        "app/Containers/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": true
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "test-coverage": [
      "@php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html reports/"
    ],
    "refresh-database": [
      "@php artisan migrate:refresh",
      "@php artisan db:seed",
      "@php artisan apiato:permissions:toRole admin"
    ],
    "fresh-database": [
      "@php artisan migrate:fresh",
      "@php artisan db:seed",
      "@php artisan apiato:permissions:toRole admin"
    ],
    "test" : [
      "@php -d xdebug.mode=debug artisan test --filter ProductControllerUnitTest -vvv"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "process-timeout": 0
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
